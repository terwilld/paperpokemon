<% include _layouts/header %>

<div class="row products">
    <% products.forEach(function(p){ %>
    <div class="col-lg-4 col-md-4 col-6 col-xs-6">
        <div class="panel panel-default my_panel">
            <div class="panel-body">
                <a class="pa center-block rounded" href="/products/<%= p.category %>/<%= p.slug %>">
                    <img class="pimage center-block rounded img-rounded"
                        src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                </a>
            </div>

            <div class="panel-footer">
                <h3><%= p.title %></h3>
                <h4>$<%= parseFloat(p.price).toFixed(2) %></h4>
                <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
            </div>
        </div>
    </div>
    <% }); %>
</div>

<% include _layouts/footer %>